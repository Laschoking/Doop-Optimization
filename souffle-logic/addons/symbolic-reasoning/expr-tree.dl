//// Assign Unary
//
#ifdef DEBUG
ToString(?expr, ?out),
#endif // DEBUG
ResolveExpr(?meth, ?var, ?expr),
isExpr(?expr) :-
    isAssignUnop_Insn(?insn),
    AssignInstruction_To(?insn, ?var),
    Var_Type(?var, ?type),
    Type_boolean(?type),
    Instruction_Method(?insn, ?meth),
    AssignOper_From(?insn, _, ?right),
    _OperatorAt(?insn, ?op),
    ResolveExpr(?meth, ?right, ?rExpr),
#ifdef DEBUG
    ToString(?rExpr, ?out),
    ?out = cat(?op, cat(" ", ?out)),
#endif // DEBUG
    ?expr = [?op, ?type, ?rExpr, nil].

// Assign Binary

#ifdef DEBUG
ToString(?expr, ?out),
#endif // DEBUG
ResolveExpr(?meth, ?var, ?expr),
isExpr(?expr) :-
    isAssignBinop_Insn(?insn),
    AssignInstruction_To(?insn, ?var),
    Var_Type(?var, ?type),
    Type_boolean(?type),
    Instruction_Method(?insn, ?meth),
    AssignOper_From(?insn, ?pos1, ?right1),
    AssignOper_From(?insn, ?pos2, ?right2),
    ?pos1 < ?pos2,
    _OperatorAt(?insn, ?op),
    ResolveExpr(?meth, ?right1, ?rExpr),
    ResolveExpr(?meth, ?right2, ?lExpr),
#ifdef DEBUG
    ToString(?lExpr, ?out1),
    ToString(?rExpr, ?out2),
    ?out = cat("(", cat(?out1, cat(")", cat(?op, cat("(", cat(?out2, ")")))))),
#endif // DEBUG
    ?expr = [?op, ?type, ?lExpr, ?rExpr].



// If Conditions - Var_Var

#ifdef DEBUG
ToString(?expr, ?out),
#endif // DEBUG
ResolveExpr(?meth, ?var, ?expr),
isExpr(?expr) :-
    IfVarVar(_, ?var, ?meth, ?right1, ?right2, ?op),
    ResolveExpr(?meth, ?right1, ?lExpr),
    ResolveExpr(?meth, ?right2, ?rExpr),
#ifdef DEBUG
    ToString(?lExpr, ?out1),
    ToString(?rExpr, ?out2),
    ?expr = [?op, "boolean", ?lExpr, ?rExpr],
    ?out = cat("(", cat(?out1, cat(")", cat(?op, cat("(", cat(?out2, ")")))))),
#endif // DEBUG
    ?expr = [?op, "boolean", ?lExpr, ?rExpr].


// If Conditions - Var_Const

#ifdef DEBUG
ToString(?expr, ?out),
ToString(?constExpr, ?right2),
#endif // DEBUG
ResolveExpr(?meth, ?var, ?expr),
isExpr(?expr) :-
    IfVarConst(_, ?var, ?meth, ?right1, ?right2, ?op),
    ?constExpr = [?right2, "boolean", nil, nil],
    ResolveExpr(?meth, ?right1, ?lExpr),
#ifdef DEBUG
    ToString(?lExpr, ?out1),
    ?out = cat("(", cat(?out1, cat(")", cat(?op, ?right2)))),
#endif // DEBUG
    ?expr = [?op, "boolean", ?lExpr, ?constExpr].
