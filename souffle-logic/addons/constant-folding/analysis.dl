//Int Condition <=

StaticCondition(?ifNode,?value) :- 
    _IfVar(?ifNode, ?pos1, ?var1), 
    IntConstFolding(_,?var1,?left,_, _),
    IfConstant(?ifNode, ?pos2, ?right),
    ?pos1 < ?pos2,
    _OperatorAt(?ifNode,"<="),
    ((?value = 1, ?left <= ?right);
